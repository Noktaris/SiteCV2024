RewriteEngine On
RewriteBase /

# Redirection de cv.html vers cv
RewriteRule ^cv\.html$ /cv [R=301,L]
RewriteRule ^index\.html$ /accueil [R=301,L]
RewriteRule ^portfolio\.html$ /projets [R=301,L]
RewriteRule ^contact\.html$ /contact [R=301,L]

# Gestion des URLs propres
RewriteRule ^cv$ cv.html [L]
RewriteRule ^accueil$ index.html [L]
RewriteRule ^projets$ portfolio.html [L]
RewriteRule ^contact$ contact.html [L]

ErrorDocument 404 /erreur/erreur404.html
ErrorDocument 403 /erreur/erreur403.html